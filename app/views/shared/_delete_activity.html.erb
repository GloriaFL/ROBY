<!-- Button trigger modal -->
<button type="button" class="btn btn-primary bg-danger activity-show-btn" data-bs-toggle="modal" data-bs-target="#deleteActivity">
  Delete
</button>

<!-- Modal -->
<div class="modal fade" id="deleteActivity" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete the activity?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary bg-danger", data-turbo-method= "delete">Delete</button>
      </div>
    </div>
  </div>
</div>
