<div class = "profile-container">
  <div class="profile-imgs-container">
    <div class = "profile-banner-img">
      <%#= @user.profile_banner_img %>
    </div>
  </div>

    <div class = "user-info">
      <div class = "user-imgs">
        <div class = "profile-img">
          <%#= @user.profile_img %>
        </div>

        <div class = "profile-dog-img">
          <%#= @dog.profile_dog_img %>
        </div>
      </div>

      <div class ="names-container">
        <div class = "profile-user-name">
          <%= @user.name %>
        </div>

        <div class = "profile-dog-name">
          <%= @dog.name %>
        </div>
      </div>
    </div>

    <div class = "profile-btns-container">
      <%= link_to "Edit Profile", "#", class: "small-btn" %>
      <%= link_to "Add Dog", "#", class: "small-btn" %>
    </div>

  <div class = "info-cards-container">
    <div class = "about-us-card">
      <h2><strong>About Me:</strong></h2>
      <p><%= user.bio %></p>
    </div>
    <div class = "location-card">
      <h2><strong>Location:</strong></h2>
      <p><%= user.location %></p>
    </div>
    <div class = "user-map">
    </div>
  </div>

  <div class = "friends-container">
    <h2>Friends:</h2>
    <div class = "row">
      <div class="col-12 col-lg-6">
      <%#import 5 friend images here%>
      </div>
    </div>
    <%= link_to "Create New Activity", "#", class: "large-btn" %>
  </div>


  <div class = "profile-activities-container">
    <h2>Attending activities:</h2>
    <%#attending activities card carousel here%>
  </div>

</div>
