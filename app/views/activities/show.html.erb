<div class="show-container">
<img class="show-image-banner" src="https://www.helpguide.org/wp-content/uploads/dog-owner-walking-on-trail.jpg" alt="">
  <div class="show-info-container">

    <h1> <strong><%= @activity.name %> </strong></h1>
    <p> <%= @activity.location %> </p>
    <p> <%= @activity.description %> </p>
    <p> <%= @activity.price %> </p>

    <%= render "shared/activity_booking_popup" %>

    <!-- Add comment button trigger modal -->
    <button type="button" class="btn btn-primary activity-show-btn" data-bs-toggle="modal" data-bs-target="#commentModal">
      Add a comment
    </button>

    <!-- Comment modal -->
    <div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="commentModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@activity, @comment] do |f| %>
              <h3><%= f.input :content %> </h3>
              <%= f.submit class: "btn btn-primary", data: {bs_dismiss: "modal"}%>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>

    <h2>Comments</h2>
    <% @activity.comments.each do |comment| %>
      <p><%= comment.content %></p>
    <% end %>
   <%= link_to "Go back to activity index", activities_path %>

  </div>
</div>
