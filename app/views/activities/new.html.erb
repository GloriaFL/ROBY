<div class="title">
  <h3><strong>Create a new activity</strong></h3>
</div>
<%= simple_form_for(@activity) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :dog_limit %>
  <%= f.input :people_limit %>
  <%= f.input :price %>
  <%= f.simple_fields_for :activity_categories do |p| %>
      <%= p.input :category_id, collection: Category.all, as: :check_boxes %>
  <% end %>

  <div class="d-grid gap-2 show-dog-btn">
    <%= f.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="d-grid gap-2 show-dog-btn">
    <%= link_to "Go back to activity index", activities_path, class:"btn btn-primary btn-lg" %>
</div>
