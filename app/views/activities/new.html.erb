<%= simple_form_for(@activity) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :dog_limit %>
  <%= f.input :people_limit %>
  <%= f.input :price %>
  <div class="d-grid gap-2 show-dog-btn">
    <%= f.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="d-grid gap-2 show-dog-btn">
    <%= link_to "Go back to activity index", activities_path, class:"btn btn-primary btn-lg" %>
</div>
